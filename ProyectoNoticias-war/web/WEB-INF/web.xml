<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Noticias</servlet-name>
        <servlet-class>org.proyectonoticias.servlet.Noticias</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNoticias</servlet-name>
        <servlet-class>org.proyectonoticias.servlet.AddNoticias</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerNoticia</servlet-name>
        <servlet-class>org.proyectonoticias.servlet.VerNoticia</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Noticias</servlet-name>
        <url-pattern>/Noticias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNoticias</servlet-name>
        <url-pattern>/AddNoticias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerNoticia</servlet-name>
        <url-pattern>/VerNoticia</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Noticias</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure Application</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>file</realm-name>
    </login-config>
    <security-role>
        <role-name>admin</role-name>
    </security-role>
</web-app>
